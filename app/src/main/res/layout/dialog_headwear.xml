<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:background="@color/headwear_page_bg_color"
    android:layout_height="220dp">

    <com.example.yangyang.viewpagerdemo.sdk.SSViewPager
        android:layout_marginTop="29dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/headwear_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.yangyang.viewpagerdemo.sdk.ViewPagerShower
        android:layout_marginBottom="9dp"
        android:id="@+id/headwear_pager_shower"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>