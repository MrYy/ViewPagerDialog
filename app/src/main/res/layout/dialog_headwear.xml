<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:background="@color/hs_s1_90"
    android:layout_height="280dp">
<com.example.yangyang.viewpagerdemo.SSViewPager
    android:id="@+id/headwear_pager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></com.example.yangyang.viewpagerdemo.SSViewPager>
    <com.example.yangyang.viewpagerdemo.ViewPagerShower
        android:id="@+id/headwear_pager_shower"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.yangyang.viewpagerdemo.ViewPagerShower>

</RelativeLayout>